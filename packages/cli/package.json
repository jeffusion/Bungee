{
  "name": "@jeffusion/bungee",
  "version": "1.0.8",
  "description": "High-performance reverse proxy server CLI",
  "type": "module",
  "bin": {
    "bungee": "./dist/index.js"
  },
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "test": "echo 'No tests for CLI package yet'",
    "postinstall": "node -e \"console.log('📦 Installing runtime dependencies...')\" && npm install --no-save pino@^9.1.0 pino-roll@^3.1.0 pino-pretty@^13.1.1 || echo '⚠️  Optional: Install pino dependencies failed, logging may be affected'"
  },
  "dependencies": {
    "@jeffusion/bungee-core": "workspace:*",
    "@jeffusion/bungee-shared": "workspace:*",
    "commander": "^14.0.1"
  },
  "keywords": [
    "reverse-proxy",
    "bun",
    "cli",
    "daemon"
  ],
  "files": [
    "dist/",
    "README.md"
  ],
  "preferGlobal": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT"
}
