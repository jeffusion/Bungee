{
  "name": "bungee",
  "version": "1.0.0",
  "description": "A high-performance reverse proxy server built with Bun and TypeScript, featuring hot configuration reloading and multi-process architecture.",
  "main": "dist/master.js",
  "bin": {
    "bungee": "./bin/bungee"
  },
  "scripts": {
    "start": "bun run src/master.ts",
    "dev": "LOG_LEVEL=debug bun --watch run src/master.ts",
    "test": "bun test",
    "prepare": "husky",
    "build": "npm run build:clean && npm run build:compile && npm run build:binaries",
    "build:clean": "rm -rf dist bin/bungee-*",
    "build:compile": "bun build src/cli/index.ts --outdir dist --target bun && bun build src/master.ts --outdir dist --target bun",
    "build:binaries": "npm run build:linux && npm run build:macos && npm run build:macos-arm",
    "build:linux": "bun build --compile --target=bun-linux-x64 src/cli/index.ts --outfile bin/bungee-linux",
    "build:macos": "bun build --compile --target=bun-darwin-x64 src/cli/index.ts --outfile bin/bungee-macos",
    "build:macos-arm": "bun build --compile --target=bun-darwin-arm64 src/cli/index.ts --outfile bin/bungee-macos-arm64",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@types/lodash-es": "^4.17.12",
    "commander": "^14.0.1",
    "dotenv": "^17.2.2",
    "lodash-es": "^4.17.21",
    "pino": "^9.1.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@types/bun": "^1.2.22",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "commitlint": "^20.0.0",
    "husky": "^9.1.7",
    "pino-pretty": "^13.1.1",
    "pino-roll": "^3.1.0",
    "semantic-release": "^24.2.9"
  },
  "keywords": [
    "reverse-proxy",
    "bun",
    "typescript",
    "cli",
    "daemon",
    "proxy-server"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "preferGlobal": true,
  "files": [
    "bin/",
    "dist/",
    "config.example.json",
    "README.md",
    "LICENSE"
  ]
}
